general {
        colors = true
        interval = 5
}

#order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
#order += "disk /"
order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "Wifi: (%quality at %essid)"
        format_down = "Wifi:X"
}

ethernet _first_ {
        format_up = "Eth: %ip (%speed)"
        format_down = "Eth:X"
}

battery all {
        format = "%status %percentage %remainingðŸ”‹"
}

disk "/" {
        format = "%avail"
}

load {
        format = "cpu %1min"
}

memory {
        format = "mem %used/%available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

volume master {
        format = "%volumeâ™ª"
        format_muted = "%volumeðŸ”‡"
        device = "pulse"
}

tztime local {
        format = "%d.%m.%y %H:%M:%S"
}
